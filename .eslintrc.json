{
  "extends": ["airbnb", "prettier", "prettier/flowtype"],
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "plugins": ["import", "node"],
  "rules": {
    "no-console": 0,
    "global-require": "off",
    "comma-dangle": ["error", "always-multiline"]
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{js,jsx}", "*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
